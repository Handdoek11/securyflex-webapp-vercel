"use client";

import { useState } from "react";
import Link from "next/link";
import { Shield, Menu, X, ChevronDown } from "lucide-react";
import { Button } from "@/components/ui/button";

interface NavigationProps {
  className?: string;
}

export function Navigation({ className = "" }: NavigationProps) {
  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);
  const [openDropdown, setOpenDropdown] = useState<string | null>(null);

  const toggleDropdown = (dropdown: string) => {
    setOpenDropdown(openDropdown === dropdown ? null : dropdown);
  };

  return (
    <nav className={`sticky top-0 z-50 bg-white border-b ${className}`}>
      <div className="container mx-auto px-4">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <Link href="/" className="flex items-center space-x-2">
            <Shield className="h-8 w-8 text-primary" />
            <span className="text-xl font-bold">SecuryFlex</span>
          </Link>

          {/* Desktop Navigation */}
          <div className="hidden lg:flex items-center space-x-8">
            <div className="relative">
              <button
                onClick={() => toggleDropdown("beveiligers")}
                className="flex items-center space-x-1 text-foreground hover:text-primary transition-colors py-2"
              >
                <span>Voor Beveiligers</span>
                <ChevronDown className="h-4 w-4" />
              </button>
              {openDropdown === "beveiligers" && (
                <div className="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-lg border p-4">
                  <Link href="/beveiligers" className="block py-2 hover:text-primary">
                    Hoe het werkt
                  </Link>
                  <Link href="/beveiligers/verdiensten" className="block py-2 hover:text-primary">
                    Verdiensten
                  </Link>
                  <Link href="/beveiligers/app" className="block py-2 hover:text-primary">
                    Download de app
                  </Link>
                </div>
              )}
            </div>

            <div className="relative">
              <button
                onClick={() => toggleDropdown("bedrijven")}
                className="flex items-center space-x-1 text-foreground hover:text-primary transition-colors py-2"
              >
                <span>Voor Bedrijven</span>
                <ChevronDown className="h-4 w-4" />
              </button>
              {openDropdown === "bedrijven" && (
                <div className="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-lg border p-4">
                  <Link href="/beveiligingsbedrijven" className="block py-2 hover:text-primary">
                    Platform features
                  </Link>
                  <Link href="/beveiligingsbedrijven/pricing" className="block py-2 hover:text-primary">
                    Prijzen
                  </Link>
                  <Link href="/beveiligingsbedrijven/demo" className="block py-2 hover:text-primary">
                    Vraag een demo aan
                  </Link>
                </div>
              )}
            </div>

            <div className="relative">
              <button
                onClick={() => toggleDropdown("opdrachtgevers")}
                className="flex items-center space-x-1 text-foreground hover:text-primary transition-colors py-2"
              >
                <span>Voor Opdrachtgevers</span>
                <ChevronDown className="h-4 w-4" />
              </button>
              {openDropdown === "opdrachtgevers" && (
                <div className="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-lg border p-4">
                  <Link href="/opdrachtgevers" className="block py-2 hover:text-primary">
                    Beveiliging inhuren
                  </Link>
                  <Link href="/opdrachtgevers/branches" className="block py-2 hover:text-primary">
                    Branches
                  </Link>
                  <Link href="/opdrachtgevers/tarieven" className="block py-2 hover:text-primary">
                    Tarieven
                  </Link>
                </div>
              )}
            </div>
          </div>

          {/* Desktop CTAs */}
          <div className="hidden lg:flex items-center space-x-4">
            <Button variant="ghost">Login</Button>
            <Button size="lg">Start direct →</Button>
          </div>

          {/* Mobile Menu Button */}
          <button
            onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}
            className="lg:hidden p-2"
          >
            {isMobileMenuOpen ? (
              <X className="h-6 w-6" />
            ) : (
              <Menu className="h-6 w-6" />
            )}
          </button>
        </div>
      </div>

      {/* Mobile Menu */}
      {isMobileMenuOpen && (
        <div className="lg:hidden bg-white border-t">
          <div className="container mx-auto px-4 py-4 space-y-4">
            <Link href="/beveiligers" className="block py-2 font-medium">
              Voor Beveiligers
            </Link>
            <Link href="/beveiligingsbedrijven" className="block py-2 font-medium">
              Voor Bedrijven
            </Link>
            <Link href="/opdrachtgevers" className="block py-2 font-medium">
              Voor Opdrachtgevers
            </Link>
            <div className="pt-4 space-y-2">
              <Button variant="outline" className="w-full">Login</Button>
              <Button className="w-full">Start direct →</Button>
            </div>
          </div>
        </div>
      )}
    </nav>
  );
}