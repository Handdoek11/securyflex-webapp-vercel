{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Biome Check",
      "type": "shell",
      "command": "npx",
      "args": ["biome", "check", "."],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "owner": "biome",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+):(\\d+)\\s+lint\\/(.*)\\s+━+$",
            "file": 1,
            "line": 2,
            "column": 3,
            "code": 4,
            "severity": "error"
          },
          {
            "regexp": "^\\s*×\\s+(.*)$",
            "message": 1,
            "loop": true
          }
        ]
      }
    },
    {
      "label": "Biome Format",
      "type": "shell",
      "command": "npx",
      "args": ["biome", "format", "--write", "."],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "TypeScript Check All",
      "type": "shell",
      "command": "npx",
      "args": ["tsc", "--noEmit"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    }
  ]
}
