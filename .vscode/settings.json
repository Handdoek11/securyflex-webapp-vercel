{
  // Biome als default formatter en linter
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },

  // Disable andere formatters voor JS/TS files
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // TypeScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Tailwind CSS settings
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  // File associations
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Exclude patterns
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },

  // Search exclude
  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.next": true,
    "**/dist": true
  },

  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,

  // Auto save
  "files.autoSave": "onFocusChange",

  // Terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Spell checker
  "cSpell.language": "en,nl",
  "cSpell.words": [
    "SecuryFlex",
    "Finqle",
    "WPBR",
    "VCA",
    "EHBO",
    "PostGIS",
    "Supabase",
    "Clerk",
    "checkins",
    "gps",
    "ZZP",
    "KvK",
    "BSN"
  ],
  "WillLuke.nextjs.addTypesOnSave": true,
  "WillLuke.nextjs.hasPrompted": true
}
